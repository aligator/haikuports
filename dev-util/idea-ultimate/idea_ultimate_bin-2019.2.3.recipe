SUMMARY="Intellij IDEA Ultimate Edition"
DESCRIPTION="A Java Integrated Development Environment to develop computer \
software."
HOMEPAGE="https://www.jetbrains.com/idea/"
COPYRIGHT="2019 JetBrains s.r.o."
LICENSE="Apache v2"
REVISION="1"
buildVersion="192.6817.14"
SOURCE_URI="https://download.jetbrains.com/idea/ideaIU-$portVersion-no-jbr.tar.gz#noarchive"
CHECKSUM_SHA256="a90806a70cbc5925a8584639c7a1e640d3bb987e05f9c2821d566d8457b4942a"
ADDITIONAL_FILES="IntelliJ_IDEA_Logo.hvif"

ARCHITECTURES="any"
DISABLE_SOURCE_PACKAGE="true"

PROVIDES="
	idea_ultimate_bin = $portVersion
	"
REQUIRES="
	haiku
	java:environment == 8
	"

BUILD_PREREQUIRES="
	"

INSTALL()
{
	mkdir -p $appsDir
	tar xvf ideaIU-$portVersion-no-jbr.tar.gz -C $appsDir
	mv $appsDir/idea-IU-$buildVersion $appsDir/idea

	cat << EOF > $appsDir/idea/idea.sh
#!/bin/sh -l
export PATH=\$JDK8_HOME/bin:\$PATH
exec $appsDir/idea/bin/idea.sh
EOF
	chmod 755 $appsDir/idea/idea.sh

	addattr -t icon -f $portDir/additional-files/IntelliJ_IDEA_Logo.hvif \
		"BEOS:ICON" "$appsDir/idea/idea.sh"
	addAppDeskbarSymlink $appsDir/idea/idea.sh 'IDEA Intellij U'
}
